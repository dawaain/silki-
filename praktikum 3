#include <iostream>
using namespace std;

int main() {
	int n = 5; // jumlah baris

	for (int i = 0; i < n; i++) {

		// spasi agar bentuknya segitiga 
		for (int s = 0; s < n - i; s++) {
			cout << " ";
		}

		int val = 1; // nilai pertama setiap baris slalu 1
		for (int j = 0; j <= i; j++) {
			cout << val << " ";

			// rumus untuk nilai berikutnya di baris pascal 
			val = val * (i - j) / (j + 1);
		}
		cout << endl;
	}
}
